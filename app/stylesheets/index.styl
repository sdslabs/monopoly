border-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	border-radius arguments

body
	background url('/images/main-bg.jpg')
	background-size cover
	background-repeat no-repeat
	height 100%

	div#start-screen
		padding-top 500px
		a
			display block
			margin-bottom 20px

	div.white-wrap
		max-width 1200px
		margin 0 auto
		margin-top 400px
		padding-bottom 10px

	div#lobby-screen
		a
			margin-right 10px
	div#room-screen
		a
			margin-right 10px

.view-container
	height 100%
.white-wrap
	background-color rgba(255,255,255,0.9)
.splash-button
	width 200px
	height 75px
	opacity 0.7
	font-size 25px
	border-radius(12px)

.game-list td, th 
	text-align center

#game-screen
	height 100%
	padding-top 0
	
#map-canvas
	height 100%
	width 100%

#side-bar
	height 100%
	width 15%
	position absolute
	right 0
	z-index 1
	background-color rgba(127, 127, 127, 0.85)

#player-details div
	text-align center
	font-size 18px
	font-weight bold

.container
	margin-top 12%